@inherits ModalDialogFormBase<ListSelectorModel<TItem>>
@typeparam TItem

<ModalDialogFormBase T="ListSelectorModel<TItem>"
                     OnDialogClose="base.OnDialogClose"
                     Model="base.Model">
    <FormContent>
        <GvScrollable>
            @if(Model.Items is not null)
            {
                <MudList SelectedItemChanged="OnItemSelected" T="TItem" >
                @foreach(var item in Model.Items)
                {
                    <MudListItem Value="item">
                        @item?.ToString()
                    </MudListItem>
                }
                </MudList>
            }
        </GvScrollable>
    </FormContent>
</ModalDialogFormBase>

@code {
    private void OnItemSelected(TItem mudListItem)
    {
        Model.Result.SelectedItem = (TItem)mudListItem;
    }
}