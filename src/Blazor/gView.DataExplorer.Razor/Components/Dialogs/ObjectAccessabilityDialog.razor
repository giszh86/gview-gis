@using gView.Framework.Core.IO
@inherits ModalDialogFormBase<ObjectAccessabilityModel>
@inject IconService Icons

<ModalDialogFormBase T="ObjectAccessabilityModel"
                     OnDialogClose="base.OnDialogClose"
                     Model="base.Model">
    <FormContent>
        <div style="display: flex; align-items: center;">
            <MudIcon Icon="@Icons.FromString(Model.ExplorerObject.Icon)" Style="margin-right: 6px;" />
            <MudText>@Model.ExplorerObject.Type: @Model.ExplorerObject.Name</MudText>
        </div>

        <MudSelect T="ConfigAccessability"
                   Label="Accessability"
                   @bind-Value="Model.Accessability">
            @(GvUtilities.EnumToSelectItems<ConfigAccessability>())
        </MudSelect>
    </FormContent>
</ModalDialogFormBase>

