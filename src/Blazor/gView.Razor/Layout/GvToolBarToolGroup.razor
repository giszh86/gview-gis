<MudPaper Outlined="true" Style="@($"margin-left:4px;padding:{PaddingTopButton}px {PaddingLeftRight}px;min-height:{MinHeight}")">
    @if (ChildContent is not null)
    {
        @ChildContent
    }
</MudPaper>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public int MinHeight {get;set;} = 0;
    [Parameter] public int PaddingTopButton { get; set; } = 0;
    [Parameter] public int PaddingLeftRight { get; set; } = 8;
}